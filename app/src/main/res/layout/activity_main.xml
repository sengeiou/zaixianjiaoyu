<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.zaixianjiaoyu.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- SimpleMarqueeView-->
            <com.project.zaixianjiaoyu.paomadeng.SimpleMarqueeView
                android:id="@+id/simpleMarqueeView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:flipInterval="2500"
                android:inAnimation="@anim/in_right"
                android:outAnimation="@anim/out_left"
                app:marqueeAnimDuration="2000"
                app:smvTextColor="@color/black"
                app:smvTextEllipsize="end"

                app:smvTextGravity="center_vertical"
                app:smvTextSingleLine="true"
                app:smvTextSize="15sp" />

            <Button
                android:id="@+id/btn_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="使用源生解析"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="使用gson解析"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到引导页"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到banner页"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_sharepreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到SharePreference"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到图片轮播"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_switchfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到切换radiobutton 的fragment"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_hidefragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到hide fragment"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_dimens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到demens界面"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_x5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到腾讯X5内核页面"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_jump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到列表页面"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="吐司"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_hotgengxin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到热更新"
                app:layout_constraintTop_toTopOf="parent" />



            <Button
                android:id="@+id/btn_jumptablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到tablayout"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:text="跳转到支付"
                app:layout_constraintTop_toTopOf="parent" />






        </LinearLayout>


    </ScrollView>

</LinearLayout>
