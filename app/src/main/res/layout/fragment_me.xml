<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:background="#00DAF6">
      <!--  android:alpha="0.9"-->
        <ImageView
            android:id="@+id/img_person"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_40"

            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="曹文利"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/text_qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_qiandao"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:text="设置"
            android:textColor="#7ACCD6" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >

            <TextView
                android:id="@+id/text_touxiang"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"

                android:background="@drawable/shape_personal"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:text="头像设置"
                android:textColor="#001117" />

            <TextView
                android:id="@+id/text_kaoshi"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"

                android:background="@drawable/shape_personal"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:text="考试考核"
                android:textColor="#001117" />

            <TextView
                android:id="@+id/text_goumai"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"

                android:background="@drawable/shape_personal"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:text="购买课时"
                android:textColor="#001117" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_history"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"


                android:background="@drawable/shape_personal"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:text="收藏/历史"
                android:textColor="#001117" />

            <TextView
                android:id="@+id/text_fankui"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"

                android:background="@drawable/shape_personal"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:text="意见反馈"
                android:textColor="#001117" />

            <TextView
                android:id="@+id/text_settings"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"

                android:background="@drawable/shape_personal"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:text="设置"
                android:textColor="#001117" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
